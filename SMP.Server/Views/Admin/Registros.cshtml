@model List<SMP.Server.Registro>
@{
    ViewBag.Title = "Registros";
}

<style style="display: none">
    #frmAtualizar button {
        padding: 3px 10px;
        margin-bottom: 15px;
    }
</style>

<h2>Registros</h2>

<form id="frmAtualizar">
    <button>Atualizar</button>
</form>

@if (Model.Count == 0)
{ 
    <h3>Nenhum registro encontrado</h3>
}
else
{
    <table class="lista">

         <tr>
            <th>ID</th>
            <th>IP</th>
            <th>Processo</th>
            <th>Data</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="width: 7%">@item.Id</td>
                <td style="width: 15%">@item.Ip</td>
                <td>@item.Processo</td>
                <td style="width: 20%">@item.Data</td>
            </tr>    
        }

    </table>
}