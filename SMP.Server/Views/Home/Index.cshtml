<h2>Sistema de Monitoramento de Processos</h2>

<form id="formLogin" action="/home/login" method="post">

    @Html.ValidationSummary()

    <div>
        <label>Usuário</label>
        <input name="usuario" type="text" />
    </div>

    <div>
        <label>Senha</label>
        <input name="senha" type="password" />
    </div>

    <div id="action">
        <button>Entrar</button>
    </div>

</form>